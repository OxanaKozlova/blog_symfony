{% extends 'base.html.twig' %}

{% block body %}
{% for post in posts %}
<div class="blog-post">
  <h2 class="blog-post-title">
  <a href="{{path('_show', {'id': post.id})}}">
    {{post.title}}</h2>
  </a>
  <p class="blog-post-meta">{{post.date|date('d.m.Y')}}
    <a href="{{path('_edit', {'id': post.id})}}">Update</a>
     <a href="{{ path('comment_index', { 'post_id': post.id }) }}">Comments</a>
  </p>
  <p>{{post.content}}</p>

</div><!-- /.blog-post -->
  {% endfor %}
{% endblock %}
